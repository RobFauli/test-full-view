<li class="{{ #style.definition }}background_color{{ /style.definition }}" itemtype="http://schema.org/NewsArticle" itemscope="">
    <a itemprop="url" href="{{get.current.fields.published_url}}" data-k5a-url="{{{ get.current.filtered.canonical_url }}}">
        {{ ^get.parent.fields.hideImage }}{{{ children.image }}}{{ /get.parent.fields.hideImage }}
        {{ ^get.parent.fields.hideTitle }}<h2 itemprop="name headline" class="{{ #style.collection }}text_decoration fields.title{{ /style.collection }}">{{{ get.current.fields.title }}}</h2>{{ /get.parent.fields.hideTitle }}
        {{ #get.parent.fields.displaySubtitle }}<p itemprop="description" class="subtitle {{ #style.collection }}text_decoration fields.subtitle{{ /style.collection }}">{{{ get.current.fields.subtitle }}}</p>{{ /get.parent.fields.displaySubtitle }}
    </a>
</li>
